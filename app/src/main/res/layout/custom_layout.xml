<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bodylight"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/bodylight"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/brows"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/brows"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/facefemaleneutral"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/facefemaleneutral"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/hairfemaleblack2"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/hairfemaleblack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/hairfemaleblonde2"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/hairfemaleblonde"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="4dp"

        />

    <ImageView
        android:id="@+id/shirtfemale"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/shirtfemale"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/shoes"
        android:layout_width="326dp"
        android:layout_height="502dp"
        android:src="@drawable/shoes"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/shorts"
        android:layout_width="327dp"
        android:layout_height="503dp"
        android:src="@drawable/shorts"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/bodylight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
